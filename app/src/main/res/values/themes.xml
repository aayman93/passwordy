<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Passwordy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
    </style>

    <style name="Theme.Passwordy" parent="Base.Theme.Passwordy" />
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Passwordy</item>
    </style>

    <style name="CustomInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">#171a26</item>
        <item name="boxStrokeColor">#1f202a</item>
        <item name="expandedHintEnabled">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="colorControlActivated">@color/label_color</item>
    </style>

    <style name="CustomTextFieldStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:background">@drawable/background_main_button</item>
        <item name="android:elevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:background">@drawable/background_home_buttons</item>
        <item name="android:elevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">30dp</item>
    </style>
</resources>